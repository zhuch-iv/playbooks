[Unit]
Description=Jupyter Service
After=docker.service
Requires=docker.service

[Service]
Restart=always
WorkingDirectory={{ root_dir }}
ExecStart=/usr/local/bin/docker-compose -f jupyter-compose.yaml up
ExecStop=/usr/local/bin/docker-compose -f jupyter-compose.yaml down
StartLimitIntervalSec=10
Restart=5

[Install]
WantedBy=default.target
